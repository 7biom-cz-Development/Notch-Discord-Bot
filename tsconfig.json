{
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["ES2015", "DOM"],
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node"
    },
    "allowJs": true,
    "include": ["classes/*.ts", "commands/*.ts", "events/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
